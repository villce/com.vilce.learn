<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vilce.springboot_vue.mapper.CategoryMapper">

    <select id="getAllCategory" resultType="com.vilce.springboot_vue.model.po.Category" >
		SELECT *
		FROM vilce.category
		ORDER BY id DESC
    </select>

    <select id="getCategoryById" resultType="com.vilce.springboot_vue.model.po.Category" >
		SELECT *
		FROM vilce.category
		WHERE id=#{id}
    </select>
</mapper>
